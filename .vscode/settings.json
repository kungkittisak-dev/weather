{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "files.exclude": {
    "**/.dart_tool": true,
    "**/.idea": true,
    "**/build": false
  },
  "search.exclude": {
    "**/build": true,
    "**/ios/Pods": true,
    "**/ios/.symlinks": true,
    "**/.dart_tool": true
  },
  "C_Cpp.errorSquiggles": "disabled",
  "clangd.arguments": [
    "--compile-commands-dir=${workspaceFolder}/build"
  ],
  "files.associations": {
    "*.h": "objective-c",
    "*.m": "objective-c"
  },
  "clangd.fallbackFlags": [
    "-I${workspaceFolder}/build/ios/Debug-iphonesimulator/Flutter.framework/Headers",
    "-F${workspaceFolder}/build/ios/Debug-iphonesimulator"
  ]
}
